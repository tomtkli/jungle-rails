<% @order.line_items.each do |item| %>

<tr>
  <td>
    <%= image_tag(item.product.image.tiny, :alt +. "product image") %>
  </td>
  <td>
    <h4><%= item.product.name %></h4>
    <br>
    <p><%= item.product.description %></p>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= item.total_price_cents %>
  </td>td
</tr>

<% end %>

<tfoot>
  <tr>
    <th colspan ="3">
      Total:
    </th>
    <th>
      <%= @order.total_cents %>
    </th>
  </tr>
</tfoot>